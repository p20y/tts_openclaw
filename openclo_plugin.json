{
  "id": "kokoro-tts-local",
  "name": "Kokoro Local TTS",
  "description": "Local Kokoro TTS plugin with Apple M4 (MPS) acceleration and CPU fallback.",
  "entrypoint": "python -m openclo_kokoro_plugin.cli",
  "input_schema": {
    "type": "object",
    "properties": {
      "text": {
        "type": "string",
        "description": "Text to synthesize"
      },
      "voice": {
        "type": "string",
        "default": "af_heart"
      },
      "lang": {
        "type": "string",
        "default": "a",
        "enum": ["a", "b"]
      },
      "speed": {
        "type": "number",
        "default": 1.0
      },
      "device": {
        "type": "string",
        "default": "auto",
        "enum": ["auto", "mps", "cuda", "cpu"]
      },
      "format": {
        "type": "string",
        "default": "wav",
        "enum": ["wav", "wav_base64"]
      },
      "output": {
        "type": "string",
        "default": "./output.wav"
      }
    },
    "required": ["text"]
  }
}
